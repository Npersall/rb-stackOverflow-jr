<h2><%= @question.title %></h2>
<p><%=@question.body%></p>

<% if @best_answer %>
  <h3>Best Answer</h3>
  <p>
    <%= @best_answer.body %>, <%= @best_answer.responder.username %>
  </p>
<% end %>

<h3>Other Answers</h3>
<p><%@other_answers.each do |answer| %>
  <ul>
    <li> <%=answer.body%>, <%= answer.responder.username %></li>
    <form action='/answers/<%= answer.id %>' method='POST'>
      <input type="hidden" name="_method" value="PUT">
      <input type="submit" value="SELECT AS BEST ANSWER">
    </form>
  </ul>
  <% end %>
</p>

<h4>Post New Answer:</h4>
<form action="/answers" method="post">
  <% if @errors %>
    <ul>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  <textarea rows="4" cols="50" name="body"></textarea><br>
  <input type="hidden" name="question_id", value="<%=@question.id %>">
  <input type="submit" value="Post Now">
</form>

